# baccarat_bot/.env.example
# Archivo de ejemplo para las variables de entorno
# Copia este archivo como .env y configura tus valores reales

# === CREDENCIALES DE TELEGRAM ===
# Token del bot de Telegram (obtenido de @BotFather)
TELEGRAM_BOT_TOKEN=tu_token_aqui

# ID del chat donde enviar las señales
TELEGRAM_CHAT_ID=tu_chat_id_aqui

# === CONFIGURACIÓN DEL MONITOREO ===
# Intervalo en segundos entre cada chequeo de mesas
INTERVALO_MONITOREO=5

# Longitud de la racha para generar señales
LONGITUD_RACHA=3

# === CONFIGURACIÓN DE LOGGING ===
# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=baccarat_bot.log

# === CONFIGURACIÓN DE DATOS ===
# true para usar datos reales, false para simulación
USAR_DATOS_REALES=false